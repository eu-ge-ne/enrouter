{
  "name": "enrouter",
  "version": "0.0.20",
  "type": "module",
  "description": "File-based router library for React",
  "license": "MIT",
  "author": "Eugene Pobochny",
  "homepage": "https://enrouter.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eu-ge-ne/enrouter.git"
  },
  "bugs": {
    "url": "https://github.com/eu-ge-ne/enrouter/issues"
  },
  "keywords": [
    "react",
    "router",
    "typescript",
    "ssr"
  ],
  "exports": {
    ".": {
      "types": "./dist/lib/mod.d.ts",
      "default": "./dist/lib/mod.js"
    },
    "./vite/plugin": {
      "types": "./dist/vite/plugin/mod.d.ts",
      "default": "./dist/vite/plugin/mod.js"
    },
    "./vite/manifest": {
      "types": "./dist/vite/manifest/mod.d.ts",
      "default": "./dist/vite/manifest/mod.js"
    }
  },
  "imports": {
    "#lib/*": "./src/lib/*"
  },
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "clean": "rm -rf ./dist && rm -rf ./coverage",
    "build": "wireit",
    "build:lib": "wireit",
    "build:vite:manifest": "wireit",
    "build:vite:plugin": "wireit",
    "lint": "wireit",
    "lint:lib": "wireit",
    "lint:vite:manifest": "wireit",
    "lint:vite:plugin": "wireit",
    "test": "NODE_OPTIONS=--experimental-vm-modules vitest run --config configs/vitest.config.ts",
    "prepublishOnly": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:lib",
        "build:vite:manifest",
        "build:vite:plugin"
      ]
    },
    "build:lib": {
      "command": "tsup --config configs/tsup.config.lib.ts",
      "output": [
        "dist/lib"
      ]
    },
    "build:vite:manifest": {
      "command": "tsup --config configs/tsup.config.vite.manifest.ts",
      "output": [
        "dist/vite/manifest"
      ]
    },
    "build:vite:plugin": {
      "command": "tsup --config configs/tsup.config.vite.plugin.ts",
      "output": [
        "dist/vite/plugin"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:lib",
        "lint:vite:manifest",
        "lint:vite:plugin"
      ]
    },
    "lint:lib": {
      "command": "tsc -p src/lib/tsconfig.json"
    },
    "lint:vite:manifest": {
      "command": "tsc -p src/vite/manifest/tsconfig.json"
    },
    "lint:vite:plugin": {
      "command": "tsc -p src/vite/plugin/tsconfig.json"
    },
    "prepublishOnly": {
      "dependencies": [
        "clean",
        "lint",
        "test",
        "build"
      ]
    }
  },
  "devDependencies": {
    "@types/lodash.groupby": "^4.6.9",
    "@types/react": "^18.3.12",
    "@vitest/browser": "^2.1.4",
    "@vitest/coverage-v8": "^2.1.4",
    "glob": "^11.0.0",
    "lodash.groupby": "^4.6.0",
    "playwright": "^1.48.2",
    "prettier": "^3.3.3",
    "regexparam": "^3.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4",
    "vitest-browser-react": "^0.0.3",
    "wireit": "^0.14.9"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "vite": "^5.4.11"
  }
}
