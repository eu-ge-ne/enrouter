{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["build:lib", "build:vite:manifest", "build:vite:plugin"]
    },
    "build:lib": {
      "outputs": ["dist/lib/**"],
      "dependsOn": ["clean", "^build"]
    },
    "build:vite:manifest": {
      "outputs": ["dist/vite/manifest/**"],
      "dependsOn": ["clean", "^build"]
    },
    "build:vite:plugin": {
      "outputs": ["dist/vite/plugin/**"],
      "dependsOn": ["clean", "^build"]
    },
    "lint": {
      "dependsOn": ["lint:lib", "lint:vite:manifest", "lint:vite:plugin"]
    },
    "lint:lib": {
      "dependsOn": ["^build"]
    },
    "lint:vite:manifest": {
      "dependsOn": ["^build"]
    },
    "lint:vite:plugin": {
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"]
    }
  }
}
