{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["build:lib", "build:vite"]
    },
    "build:lib": {
      "inputs": ["$TURBO_DEFAULT$", "lib/**"],
      "outputs": ["dist/lib/**"],
      "dependsOn": ["clean", "^build"]
    },
    "build:vite": {
      "inputs": ["$TURBO_DEFAULT$", "vite/**"],
      "outputs": ["dist/vite/**"],
      "dependsOn": ["clean", "^build"]
    },
    "test": {
      "outputs": ["coverage/**"]
    }
  }
}
