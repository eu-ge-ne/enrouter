{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": false
    },
    "lint": {
      "cache": true
    },
    "test": {
      "cache": true,
      "outputs": ["coverage/**"]
    },
    "build": {
      "cache": true,
      "outputs": ["dist/**"],
      "dependsOn": ["clean", "^build"]
    }
  }
}
