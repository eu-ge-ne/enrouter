{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "//#prettier": {
      "cache": false
    },




    "lint": {
      "cache": false,
      "dependsOn": ["//#prettier", "^build"]
    },




    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": false,
      "dependsOn": ["^build"]
    },





    "deploy": {
      "cache": false,
      "dependsOn": ["clean", "lint", "test", "build"]
    }
  }
}
