{
  "name": "@enrouter/web",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "exports": {
    "./ssr": "./dist/server/ssr.js",
    "./manifest": "./dist/client/.vite/manifest.json"
  },
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "lint": "tsc",
    "build": "true",
    "build:client": "vite build -c configs/vite.config.ts",
    "build:server": "vite build -c configs/vite.config.ssr.ts"
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "build:*"
        ]
      },
      "build:client": {
        "cache": true,
        "outputs": [
          "{projectRoot}/dist/client"
        ],
        "dependsOn": [
          "^build",
          "clean"
        ]
      },
      "build:server": {
        "cache": true,
        "outputs": [
          "{projectRoot}/dist/server"
        ],
        "dependsOn": [
          "^build",
          "build:client",
          "clean"
        ]
      }
    }
  },
  "devDependencies": {
    "@enrouter/tsconfig": "workspace:*",
    "@mdx-js/react": "^3.0.1",
    "@mdx-js/rollup": "^3.0.1",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.7.5",
    "@types/prismjs": "^1.26.4",
    "@types/react": "npm:types-react@rc",
    "@types/react-dom": "npm:types-react-dom@rc",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "enrouter": "workspace:*",
    "glob": "^11.0.0",
    "globals": "^15.11.0",
    "mermaid": "^11.3.0",
    "postcss": "^8.4.47",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.29.0",
    "react": "19.0.0-rc-1460d67c-20241003",
    "react-dom": "19.0.0-rc-1460d67c-20241003",
    "remark-gfm": "^4.0.0",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3",
    "vite": "^5.4.9"
  },
  "overrides": {
    "@types/react": "npm:types-react@rc",
    "@types/react-dom": "npm:types-react-dom@rc"
  }
}
